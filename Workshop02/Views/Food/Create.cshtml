@using Workshop02.Models;
@model Food

@section head{
    <title>Create new food!</title>
}

<h1>Create your food</h1>

<form action="create" method="post" enctype="multipart/form-data" style="display: flex; flex-direction: column">
    @Html.LabelFor(t => t.Name)
    @Html.EditorFor(t => t.Name)
    @Html.ValidationMessageFor(t => t.Name)

    @Html.LabelFor(t => t.Calories)
    @Html.EditorFor(t => t.Calories)
    @Html.ValidationMessageFor(t => t.Calories)

    @Html.LabelFor(t => t.Category)
    @Html.EditorFor(t => t.Category)
    @Html.ValidationMessageFor(t => t.Category)

    @Html.LabelFor(t => t.Price)
    @Html.EditorFor(t => t.Price)
    @Html.ValidationMessageFor(t => t.Price)


    <label>Picture</label>
    <input type="file" name="picturedata"/>

    <input type="submit" value="Create" /> 

</form>